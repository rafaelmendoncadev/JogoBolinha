            <i class="fas fa-medal"></i>
            <div class="stat-info">
                <div class="stat-value">0</div>
                <div class="stat-label">N√≠veis Completos</div>
            </div>
        </div>
        <div class="stat-card">
            <i class="fas fa-star"></i>
            <div class="stat-info">
                <div class="stat-value">0</div>
                <div class="stat-label">Pontua√ß√£o Total</div>
            </div>
        </div>
