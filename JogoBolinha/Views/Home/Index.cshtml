@section Scripts {
    <script>
        function showComingSoon() {
            alert('Esta funcionalidade estar√° dispon√≠vel em breve!');
        }

        $(document).ready(function() {
            // Add entrance animations
            $('.menu-btn').each(function(index) {
                $(this).css({
                    'opacity': '0',
                    'transform': 'translateY(30px)'
                });
                
                $(this).animate({
                    'opacity': '1',
                    'transform': 'translateY(0)'
                }, 500 + (index * 100));
            });

            // Add click ripple effect
            $('.menu-btn').on('click', function(e) {
                const ripple = $('<span class="ripple"></span>');
                const rect = this.getBoundingClientRect();
                const size = Math.max(rect.width, rect.height);
                const x = e.clientX - rect.left - size / 2;
                const y = e.clientY - rect.top - size / 2;
                
                ripple.css({
                    width: size,
                    height: size,
                    left: x,
                    top: y,
                    position: 'absolute',
                    borderRadius: '50%',
                    background: 'rgba(255,255,255,0.6)',
                    transform: 'scale(0)',
                    pointerEvents: 'none',
                    zIndex: '1'
                });
                
                $(this).append(ripple);
                
                ripple.animate({
                    transform: 'scale(2)',
                    opacity: 0
                }, 500, function() {
                    ripple.remove();
                });
            });

            // Handle delete saved game
            $('.delete-save').on('click', function(e) {
                e.preventDefault();
                const gameId = $(this).data('game-id');
                const $card = $(this).closest('.saved-game-card');
                const levelNumber = $card.find('strong').text();
                
                if (confirm(`Tem certeza que deseja excluir o jogo salvo "${levelNumber}"? Esta a√ß√£o n√£o pode ser desfeita.`)) {
                    $.ajax({
                        url: '@Url.Action("DeleteSavedGame", "Profile")',
                        type: 'POST',
                        data: { gameStateId: gameId },
                        success: function(response) {
                            if (response.success) {
                                $card.fadeOut(300, function() {
                                    $(this).remove();
                                    
                                    // Check if no more saved games
                                    if ($('.saved-games-list .saved-game-card').length === 0) {
                                        $('.saved-games-section').fadeOut(300);
                                    }
                                });
                                
                                // Show success message
                                showNotification('Jogo salvo exclu√≠do com sucesso!', 'success');
                            } else {
                                showNotification(response.message || 'Erro ao excluir jogo salvo.', 'error');
                            }
                        },
                        error: function() {
                            showNotification('Erro de conex√£o. Tente novamente.', 'error');
                        }
                    });
                }
            });
        });

        // Notification system
        function showNotification(message, type = 'info') {
            const notification = $(`
                <div class="notification notification-${type}">
                    <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-triangle'}"></i>
                    <span>${message}</span>
                </div>
            `);
            
            $('body').append(notification);
            
            notification.animate({
                top: '20px',
                opacity: 1
            }, 300);
            
            setTimeout(() => {
                notification.animate({
                    top: '-100px',
                    opacity: 0
                }, 300, function() {
                    $(this).remove();
                });
            }, 3000);
        });
    </script>
}
