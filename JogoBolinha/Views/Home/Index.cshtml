@model JogoBolinha.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Ball Sort Puzzle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="home-container">
    <!-- Game Logo and Title -->
    <div class="game-logo-section">
        <div class="logo-animation">
            <div class="ball-demo ball-red"></div>
            <div class="ball-demo ball-blue"></div>
            <div class="ball-demo ball-green"></div>
            <div class="ball-demo ball-yellow"></div>
        </div>
        <h1 class="game-title">Ball Sort Puzzle</h1>
        <p class="game-subtitle">Organize as bolinhas coloridas nos tubos corretos!</p>
    </div>

    <!-- Saved Games Section -->
    @if (User.Identity?.IsAuthenticated == true && Model.HasSavedGames)
    {
        <div class="saved-games-section">
            <h3><i class="fas fa-save"></i> Meus Jogos Salvos</h3>
            
            <!-- Continue button (destacado) -->
            @if (Model.MostRecentGame != null)
            {
                <div class="continue-game-card">
                    <a href="@Url.Action("Continue", "Game", new { gameStateId = Model.MostRecentGame.GameStateId })" 
                       class="btn btn-primary btn-lg continue-btn">
                        <i class="fas fa-play-circle"></i> 
                        Continuar N√≠vel @Model.MostRecentGame.LevelNumber 
                        (@Model.MostRecentGame.ProgressPercentage% completo)
                    </a>
                </div>
            }
            
            <!-- Lista de jogos salvos -->
            <div class="saved-games-list">
                @foreach (var game in Model.SavedGames)
                {
                    <div class="saved-game-card">
                        <div class="game-info">
                            <div class="game-level">
                                <strong>N√≠vel @game.LevelNumber</strong>
                                <span class="progress-badge">@game.ProgressPercentage%</span>
                            </div>
                            <div class="game-details">
                                <span class="text-muted">
                                    @game.CompletedTubes/@game.TotalTubes tubos completos
                                </span>
                                <span class="separator">‚Ä¢</span>
                                <span class="text-muted">
                                    @game.MovesCount movimentos
                                </span>
                                @if (game.HintsUsed > 0)
                                {
                                    <span class="separator">‚Ä¢</span>
                                    <span class="text-muted">
                                        @game.HintsUsed dicas
                                    </span>
                                }
                            </div>
                            <div class="game-time">
                                <small class="text-muted">
                                    <i class="fas fa-clock"></i>
                                    Tempo: @game.TimePlayed.ToString(@"hh\:mm\:ss") - 
                                    √öltima atividade: @game.LastActivity.ToString("dd/MM HH:mm")
                                </small>
                            </div>
                        </div>
                        <div class="game-actions">
                            <a href="@Url.Action("Continue", "Game", new { gameStateId = game.GameStateId })" 
                               class="btn btn-sm btn-success">
                                <i class="fas fa-play"></i> Continuar
                            </a>
                            <button class="btn btn-sm btn-danger delete-save" 
                                    data-game-id="@game.GameStateId"
                                    title="Excluir jogo salvo">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                }
            </div>
            
            @if (Model.SavedGames.Count >= 5)
            {
                <div class="view-all-saves">
                    <a href="@Url.Action("SavedGames", "Profile")" class="btn btn-link">
                        <i class="fas fa-list"></i> Ver todos os jogos salvos
                    </a>
                </div>
            }
        </div>
    }

    <!-- Main Menu Buttons -->
    <div class="main-menu">
        <div class="menu-buttons">
            @if (Model.HasContinueGame && !Model.HasSavedGames)
            {
                <a href="@Url.Action("Continue", "Game", new { gameStateId = Model.ContinueGameState!.Id })" class="menu-btn btn-continue">
                    <i class="fas fa-play"></i>
                    <span class="btn-text">Continuar Jogo</span>
                    <small class="btn-subtitle">N√≠vel @Model.ContinueGameState!.Level.Number</small>
                </a>
            }
            
            <a href="@Url.Action("Play", "Game", new { levelNumber = 1 })" class="menu-btn btn-new-game">
                <i class="fas fa-plus-circle"></i>
                <span class="btn-text">Novo Jogo</span>
                <small class="btn-subtitle">Come√ßar do n√≠vel 1</small>
            </a>
            
            <a href="@Url.Action("Index", "Game")" class="menu-btn btn-levels">
                <i class="fas fa-list"></i>
                <span class="btn-text">Selecionar N√≠vel</span>
                <small class="btn-subtitle">Escolha qualquer n√≠vel</small>
            </a>
            
            <a href="#" class="menu-btn btn-leaderboard" onclick="showComingSoon()">
                <i class="fas fa-trophy"></i>
                <span class="btn-text">Ranking</span>
                <small class="btn-subtitle">Melhores pontua√ß√µes</small>
            </a>
            
            <a href="#" class="menu-btn btn-profile" onclick="showComingSoon()">
                <i class="fas fa-user"></i>
                <span class="btn-text">Perfil</span>
                <small class="btn-subtitle">Estat√≠sticas pessoais</small>
            </a>
            
            <a href="#" class="menu-btn btn-settings" onclick="showComingSoon()">
                <i class="fas fa-cog"></i>
                <span class="btn-text">Configura√ß√µes</span>
                <small class="btn-subtitle">Som, tema e mais</small>
            </a>
