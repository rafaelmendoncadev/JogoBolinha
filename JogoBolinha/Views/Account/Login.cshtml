@model JogoBolinha.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white text-center py-4">
                    <h2 class="mb-0">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        Entrar
                    </h2>
                    <p class="mb-0 mt-2">Bem-vindo de volta!</p>
                </div>
                <div class="card-body p-4">
                    @if (ViewData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @ViewData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    
                    @if (ViewData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @ViewData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    
                    <form asp-action="Login" method="post" id="loginForm" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <!-- Username or Email -->
                        <div class="mb-3">
                            <label asp-for="UsernameOrEmail" class="form-label fw-bold">
                                <i class="fas fa-user me-1"></i>
                                @Html.DisplayNameFor(m => m.UsernameOrEmail)
                            </label>
                            <input asp-for="UsernameOrEmail" class="form-control form-control-lg" 
                                   placeholder="Digite seu usuário ou email" 
                                   autocomplete="username" 
                                   autofocus />
                            <span asp-validation-for="UsernameOrEmail" class="text-danger small"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold">
                                <i class="fas fa-lock me-1"></i>
                                @Html.DisplayNameFor(m => m.Password)
                            </label>
                            <div class="input-group">
                                <input asp-for="Password" class="form-control form-control-lg" 
                                       placeholder="Digite sua senha" 
                                       autocomplete="current-password" />
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                    <i class="fas fa-eye" id="togglePasswordIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- Remember Me and Forgot Password -->
                        <div class="row mb-4">
                            <div class="col-6">
                                <div class="form-check">
                                    <input asp-for="RememberMe" class="form-check-input" />
                                    <label asp-for="RememberMe" class="form-check-label">
                                        Lembrar-me
                                    </label>
                                </div>
                            </div>
                            <div class="col-6 text-end">
                                <a href="#" class="text-primary text-decoration-none small">
                                    <i class="fas fa-question-circle me-1"></i>
                                    Esqueceu a senha?
                                </a>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg" id="submitBtn">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                <span id="submitText">Entrar</span>
                                <span id="submitLoading" class="d-none">
                                    <i class="fas fa-circle-notch fa-spin me-2"></i>
                                    Entrando...
                                </span>
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3 bg-light">
                    <p class="mb-0">
                        Não tem uma conta? 
                        <a asp-action="Register" class="text-success fw-bold text-decoration-none">
                            <i class="fas fa-user-plus me-1"></i>
                            Criar Conta
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Loading Overlay -->
<div id="loadingOverlay" class="d-none position-fixed top-0 start-0 w-100 h-100" 
     style="background-color: rgba(0,0,0,0.5); z-index: 9999;">
    <div class="d-flex justify-content-center align-items-center h-100">
        <div class="text-center text-white">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Carregando...</span>
            </div>
            <p class="mt-3">Verificando credenciais...</p>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Toggle password visibility
            $('#togglePassword').click(function() {
                const passwordField = $('#Password');
                const icon = $('#togglePasswordIcon');
                
                if (passwordField.attr('type') === 'password') {
                    passwordField.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordField.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });
            
            // Form submission with loading state
            $('#loginForm').on('submit', function(e) {
                const submitBtn = $('#submitBtn');
                const submitText = $('#submitText');
                const submitLoading = $('#submitLoading');
                
                // Show loading state
                submitBtn.prop('disabled', true);
                submitText.addClass('d-none');
                submitLoading.removeClass('d-none');
                
                // Show overlay after a short delay to prevent flashing
                setTimeout(function() {
                    if (submitBtn.prop('disabled')) {
                        $('#loadingOverlay').removeClass('d-none');
                    }
                }, 200);
            });
            
            // Handle form validation errors
            if ($('.text-danger').length > 0) {
                // Reset button state if there are validation errors
                resetSubmitButton();
            }
            
            // Auto-hide alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
            
            // Enter key handling
            $('#UsernameOrEmail, #Password').on('keypress', function(e) {
                if (e.which === 13) { // Enter key
                    $('#loginForm').submit();
                }
            });
            
            function resetSubmitButton() {
                const submitBtn = $('#submitBtn');
                const submitText = $('#submitText');
                const submitLoading = $('#submitLoading');
                
                submitBtn.prop('disabled', false);
                submitText.removeClass('d-none');
                submitLoading.addClass('d-none');
                $('#loadingOverlay').addClass('d-none');
            }
            
            // Reset button state on page load
            resetSubmitButton();
        });
    </script>
}